@model List<Product>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Table</h4>

                        <a class="btn btn-primary" asp-action="create">Create</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>                                      
                                        <th>Description</th>
                                        <th>IsDelete</th>
                                        <th>Catigories</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Description</td>
                                            <td>@product.IsDeleted</td>
                                            <td>
                                                @foreach (var category in product.ProductCategories)
                                                {
                                                    @(category.Category.Name + " ")
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@product.Id">Details</a>
                                                <a class="btn btn-success" asp-action="Update" asp-route-id="@product.Id">Update</a>
                                                <div style="display:inline-block">
                                                    <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@product.Id">
                                                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a> from Bootstrapdash.com</span>
        </div>
    </footer>
    <!-- partial -->
</div>
